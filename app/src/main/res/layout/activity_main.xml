<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Lbl_Nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Masukkan Nama Anda"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/TxtNama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Lbl_Nama"
        android:ems="10"
        android:inputType="none"
        tools:ignore="Autofill,HardcodedText,LabelFor" />

    <Button
        android:id="@+id/BtnTampil"
        android:onClick="TampilNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Bttn_Tampil_Nama"
        android:layout_below="@+id/TxtNama"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tvSalam"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:padding="5dp"
        android:layout_below="@+id/BtnTampil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Masukkan Nama Anda Diatas"
        tools:ignore="HardcodedText" />

</RelativeLayout>